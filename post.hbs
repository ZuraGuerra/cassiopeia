{{!< default}}
<section id="main-body">
<div class="container">
	<div class="row">
		<div class="col-md-8">
			<article class="{{post_class}}">
				{{#post}}
					<header class="post-header">
						<h2>{{{title}}}</h2>
						<div class="meta-info">
							{{#author}}
							<span class="author">
								<a href="{{url}}">{{name}}</a>
							</span>
							{{/author}}
						</div>
						{{#if image}}
							<img class="featured-image" src="{{image}}" alt="{{{title}}}" title="{{{title}}}" />
						{{else}}
							<img class="featured-image" src="{{asset "images/no-image.jpg"}}" />
						{{/if}}
					</header>

					<footer class="post-footer">
						{{#if "tags"}}
						<section class="tags pull-left">
							{{tags separator=" · "}}
						</section>
						{{/if}}

						{{> share}}
						<div class="clearfix"></div>

						{{> post-author}}
					</footer>

					<section class="post-content">
						{{content}}
					</section>

					<nav class="pagination">
						<div>
							{{#next_post}}
							<a class="newer-posts-single" href="{{url}}" title="{{title}}">Next post →</a>
							{{/next_post}}

							{{#prev_post}}
							<a class="older-posts-single" href="{{url}}" title="{{title}}">← Previous post</a>
							{{/prev_post}}

						</div>
					</nav>

					<footer class="post-footer">
						{{> comments}}
					</footer>
				{{/post}}
			</article>
		</div>
		{{> sidebar}}
	</div>
</div>
</section>
